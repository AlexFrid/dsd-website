---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../config';
import BlogPostsList from '../components/BlogPostsList.astro';
---

<!DOCTYPE html>
<html lang="en">
	<head> <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} /> </head>
	<body>
		<Header />
		<main class="container px-6 py-10 mx-auto">
			<h1 class="text-3xl font-semibold text-gray-800 capitalize lg:text-4xl dark:text-white">Recent posts </h1>
			<BlogPostsList />
		</main>
		<Footer />
	</body>
</html>
